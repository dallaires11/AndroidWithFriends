<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="463dp"
        android:layout_height="820dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505"
        app:srcCompat="@drawable/pic_background_menu" />

    <LinearLayout
        android:layout_width="427dp"
        android:layout_height="744dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_GameTitle"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            app:srcCompat="@drawable/pic_gametitle" />

        <TextView
            android:id="@+id/txtSpace1"
            android:layout_width="match_parent"
            android:layout_height="67dp" />

        <Button
            android:id="@+id/btnPlay"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="@android:drawable/alert_dark_frame"
            android:backgroundTint="@color/red"
            android:baselineAligned="false"
            android:fontFamily="@font/asset"
            android:onClick="StartGame"
            android:text="@string/play"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtSpace2"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btnCredit"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="@android:drawable/alert_dark_frame"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/asset"
            android:onClick="StartCredit"
            android:text="@string/credit" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>